{
	"name": "groweski-generator",
	"version": "0.0.1",
	"browserify": {
		"transform": [
			"babelify"
		]
	},
	"scripts": {
		"build-css": "catw -c 'lessc -' 'app/style/style.less' -o public/bundle.css -v",
		"build-js": "NODE_ENV=production browserify app/js/main.js | uglifyjs -cm > public/bundle.js",
		"build": "npm run build-css && npm run build-js",
		"start": "ecstatic -p 8000",
		"watch-css": "catw -c 'lessc -' 'app/style/style.less' -o public/bundle.css -v",
		"watch-js": "watchify app/js/main.js -o public/bundle.js -dv",
		"watch": "npm run watch-css & npm run watch-js"
	},
	"dependencies": {
		"babelify": "^6.1.3",
		"browserify": "^10.2.6",
		"catw": "~0.2.0",
		"ecstatic": "~0.8.0",
		"less": "~1.5.1",
		"react": "~0.13.3",
		"uglify-js": "^2.4.24",
		"watchify": "^3.2.3"
	}
}
